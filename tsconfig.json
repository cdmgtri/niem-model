{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "target": "ESNext",
    "watch": true
  },
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "docs"
  ]
}